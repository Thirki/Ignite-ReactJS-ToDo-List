{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": false, // Removendo skipLibCheck
    "moduleResolution": "node", // Alterando para node
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true, // Adicionando strictNullChecks
    "strictFunctionTypes": true // Adicionando strictFunctionTypes
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
